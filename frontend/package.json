{
  "name": "client",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "typecheck": "bunx tsc --noEmit",
    "lint": "oxlint --deny-warnings src && stylelint 'src/**/*.scss'",
    "lint:fix": "oxlint --fix src && stylelint --fix 'src/**/*.scss'",
    "fmt": "oxfmt src",
    "fmt:check": "oxfmt --check src",
    "sprite": "bun run scripts/build-tile-sprite.ts",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "optimize:back": "bunx svgo src/assets/tiles/backs/classic-yellow.svg"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.18",
    "happy-dom": "^20.7.0",
    "oxfmt": "^0.27.0",
    "oxlint": "^1.42.0",
    "sass": "^1.97.3",
    "stylelint": "^17.1.0",
    "stylelint-config-standard-scss": "^17.0.0",
    "svgo": "^4.0.0",
    "typescript": "^5.9.3",
    "vite": "^6",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@msgpack/msgpack": "^3.1.3",
    "@picocss/pico": "^2.1.1",
    "lit-html": "^3.3.2"
  }
}
