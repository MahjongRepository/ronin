{
  "name": "client",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run sass:build && (bunx sass --watch src/styles/main.scss:public/styles/main.css --no-source-map & SASS_PID=$!; trap 'kill $SASS_PID 2>/dev/null' EXIT; bun ./index.html --port 3000)",
    "sass:build": "bunx sass src/styles/main.scss public/styles/main.css --no-source-map",
    "sass:watch": "bunx sass --watch src/styles/main.scss:public/styles/main.css --no-source-map",
    "typecheck": "bunx tsc --noEmit",
    "lint": "oxlint --deny-warnings src && stylelint 'src/**/*.scss'",
    "lint:fix": "oxlint --fix src && stylelint --fix 'src/**/*.scss'",
    "fmt": "oxfmt src",
    "fmt:check": "oxfmt --check src"
  },
  "devDependencies": {
    "bun-types": "^1.3.8",
    "oxfmt": "^0.27.0",
    "oxlint": "^1.42.0",
    "sass": "^1.97.3",
    "stylelint": "^17.1.0",
    "stylelint-config-standard-scss": "^17.0.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@msgpack/msgpack": "^3.1.3",
    "lit-html": "^3.3.2"
  }
}
